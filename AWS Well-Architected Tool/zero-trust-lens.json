{
  "schemaVersion": "2021-11-01",
  "name": "Zero-Trust Lens (Organization Custom)",
  "description": "Assess workloads against AWS Zero-Trust principles: identity-first, least privilege, network segmentation, device posture, data protection, observability, and automated response.",
  "pillars": [
    {
      "id": "zt_identity",
      "name": "Identity & Access",
      "questions": [
        {
          "id": "zt_iam_1",
          "title": "Are all access decisions identity-based and enforced with MFA?",
          "description": "Use MFA for human users and enforce temporary credentials for workloads. Avoid long-term IAM access keys.",
          "choices": [
            {
              "id": "best",
              "title": "Fully enforced: MFA for users, temporary sessions for workloads, no long-term keys",
              "helpfulResource": {
                "displayText": "MFA overview",
                "url": "https://docs.aws.amazon.com/IAM/latest/UserGuide/id_credentials_mfa.html"
              },
              "improvementPlan": {
                "displayText": "Enable MFA everywhere and replace long-term keys with IAM roles.",
                "url": "https://docs.aws.amazon.com/IAM/latest/UserGuide/id_credentials_mfa.html"
              }
            },
            {
              "id": "partial",
              "title": "Partially enforced: some identities still lack MFA or use long-term keys",
              "helpfulResource": {
                "displayText": "ABAC overview",
                "url": "https://docs.aws.amazon.com/IAM/latest/UserGuide/introduction_attribute-based-access-control.html"
              },
              "improvementPlan": {
                "displayText": "Phase out remaining long-term keys, enforce MFA with policies.",
                "url": "https://docs.aws.amazon.com/IAM/latest/UserGuide/id_credentials_mfa.html"
              }
            },
            {
              "id": "none",
              "title": "Not enforced",
              "helpfulResource": {
                "displayText": "STS overview",
                "url": "https://docs.aws.amazon.com/STS/latest/APIReference/welcome.html"
              },
              "improvementPlan": {
                "displayText": "Implement MFA and short-lived sessions.",
                "url": "https://docs.aws.amazon.com/STS/latest/APIReference/welcome.html"
              }
            }
          ],
          "riskRules": [
            {
              "condition": "best",
              "risk": "NO_RISK"
            },
            {
              "condition": "!best && partial",
              "risk": "MEDIUM_RISK"
            },
            {
              "condition": "default",
              "risk": "HIGH_RISK"
            }
          ]
        },
        {
          "id": "zt_iam_2",
          "title": "Is least privilege implemented via roles and ABAC with tags?",
          "description": "Implement role separation and attribute-based access control (tags) to scope permissions.",
          "choices": [
            {
              "id": "best",
              "title": "Yes: minimal roles, ABAC, and scheduled access reviews",
              "helpfulResource": {
                "displayText": "ABAC in IAM",
                "url": "https://docs.aws.amazon.com/IAM/latest/UserGuide/introduction_attribute-based-access-control.html"
              },
              "improvementPlan": {
                "displayText": "Adopt ABAC and periodic permission reviews.",
                "url": "https://docs.aws.amazon.com/IAM/latest/UserGuide/introduction_attribute-based-access-control.html"
              }
            },
            {
              "id": "partial",
              "title": "Partially: a few broad admin roles remain",
              "helpfulResource": {
                "displayText": "Policy conditions",
                "url": "https://docs.aws.amazon.com/IAM/latest/UserGuide/reference_policies_condition-keys.html"
              },
              "improvementPlan": {
                "displayText": "Reduce broad permissions and add tag-based conditions.",
                "url": "https://docs.aws.amazon.com/IAM/latest/UserGuide/reference_policies_condition-keys.html"
              }
            },
            {
              "id": "none",
              "title": "No: wildcard or admin policies are common",
              "helpfulResource": {
                "displayText": "SRA",
                "url": "https://docs.aws.amazon.com/prescriptive-guidance/latest/security-reference-architecture/welcome.html"
              },
              "improvementPlan": {
                "displayText": "Refactor to scoped roles, remove wildcard actions/resources.",
                "url": "https://docs.aws.amazon.com/prescriptive-guidance/latest/security-reference-architecture/welcome.html"
              }
            }
          ],
          "riskRules": [
            {
              "condition": "best",
              "risk": "NO_RISK"
            },
            {
              "condition": "!best && partial",
              "risk": "MEDIUM_RISK"
            },
            {
              "condition": "default",
              "risk": "HIGH_RISK"
            }
          ]
        },
        {
          "id": "zt_iam_3",
          "title": "Are session durations and MFA age constraints enforced for sensitive actions?",
          "description": "Use aws:MultiFactorAuthPresent and aws:MultiFactorAuthAge to require fresh MFA and limit session lifetime.",
          "choices": [
            {
              "id": "best",
              "title": "Yes: MFA age and short session duration enforced for admin/sensitive roles",
              "helpfulResource": {
                "displayText": "Policy condition keys",
