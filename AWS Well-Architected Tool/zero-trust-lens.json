            {
              "id": "partial",
              "title": "Partially: only some roles enforce it",
              "helpfulResource": {
                "displayText": "STS reference",
                "url": "https://docs.aws.amazon.com/STS/latest/APIReference/welcome.html"
              },
              "improvementPlan": {
                "displayText": "Expand enforcement to all sensitive roles.",
                "url": "https://docs.aws.amazon.com/STS/latest/APIReference/welcome.html"
              }
            },
            {
              "id": "none",
              "title": "No: long sessions without MFA checks",
              "helpfulResource": {
                "displayText": "MFA overview",
                "url": "https://docs.aws.amazon.com/IAM/latest/UserGuide/id_credentials_mfa.html"
              },
              "improvementPlan": {
                "displayText": "Enable MFA checks and shorten sessions.",
                "url": "https://docs.aws.amazon.com/IAM/latest/UserGuide/id_credentials_mfa.html"
              }
            }
          ],
          "riskRules": [
            {
              "condition": "best",
              "risk": "NO_RISK"
            },
            {
              "condition": "!best && partial",
              "risk": "MEDIUM_RISK"
            },
            {
              "condition": "default",
              "risk": "HIGH_RISK"
            }
          ]
        }
      ]
    },
